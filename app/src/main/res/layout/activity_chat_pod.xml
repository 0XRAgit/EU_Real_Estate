<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat_pod"
    android:background="#BDDEF2">


        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_centerHorizontal="true"
            android:popupBackground="#BDDEF2"
            android:outlineSpotShadowColor="@color/fon_osn"
            android:outlineAmbientShadowColor="@color/fon_osn"
        />

    <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
        android:id="@+id/realtor_FIO_lay"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:borderColor="@color/fon_osn"
        app:borderWidth="2dp"
        app:cornerRadius="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:animatedTextSize="10sp">
        <EditText
            android:id="@+id/realtor_FIO"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Опишите вашу проблему"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black"/>
    </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

    <com.royrodriguez.transitionbutton.TransitionButton
        android:id="@+id/push_but"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bnm"
        android:textColor="#eaebea"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7.5dp"
        android:layout_gravity="right"
        android:fontFamily="@font/robotocondensed_bold"
        android:text="Отправить"
        app:defaultColor="#023373"/>





    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bnm"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/knop"
        app:itemIconTint="@color/back"
        app:menu="@menu/menu_nav"
        />

</RelativeLayout>