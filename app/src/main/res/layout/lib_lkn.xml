<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:padding="10dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        android:elevation="10dp"
>
        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BDDEF2">
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:background="@android:color/transparent"
        />

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/image"
        android:background="@android:color/black"
        android:alpha="0.4"
        android:orientation="horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/image"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                >
                <TextView
                    android:id="@+id/text_titel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_light"
                    android:textColor="#BDDEF2"
                    android:textSize="20dp"
                    android:text="Пентхаус"/>

                <TextView
                    android:id="@+id/text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_light"
                    android:textColor="#BDDEF2"
                    android:textSize="20dp"
                    android:text="10.000.000 $"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:layout_alignParentRight="true"
                    android:paddingEnd="5dp"
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pol_ot_pol"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/pos"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:src="@drawable/pos"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                />
            <TextView
                android:id="@+id/text_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_light"
                android:textColor="#BDDEF2"
                android:textSize="20dp"
                android:text="Мадрид"
                android:layout_gravity="bottom"
                android:paddingBottom="3dp"
                />
        </LinearLayout>
    </LinearLayout>
            <TextView
                android:id="@+id/com_nam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lin"
                android:text="Ваш комментарий:"
                android:textColor="#023373"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                />
            <TextView
                style="@style/it_font"
                android:id="@+id/com_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/com_nam"
                android:text="Интересный дизайн пентхауса. Круто, что рядом находится озеро Комо! Хотелось бы
еще посмотреть похожие варианты."
                android:textColor="#023373"
                android:padding="10dp"
                />
    </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>